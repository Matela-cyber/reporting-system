<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.repoting_system.ReportController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-text-fill: #333;" text="Weekly Report Submission" />
    <DatePicker fx:id="attendanceDatePicker" />
    <ComboBox fx:id="moduleComboBox" promptText="Select Module" />
    <ComboBox fx:id="classComboBox" promptText="Select Class" />
    <ComboBox fx:id="lecturerComboBox" promptText="Select Lecturer" />
    <TextArea fx:id="challengesField" promptText="Challenges" />
    <TextArea fx:id="recommendationsField" promptText="Recommendations" />
    <Button fx:id="submitReportButton" onAction="#handleSubmitReport" text="Submit" />
</VBox>
